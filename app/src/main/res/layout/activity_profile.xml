<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mate.ProfileActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="@color/secondaryColor"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:id="@+id/back_image"

                android:layout_height="wrap_content"
                android:src="@drawable/back_foreground"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Profile"
                android:textSize="20dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"

                />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/stud_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/secondaryColor"
        android:hint="Name"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/stud_college"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/secondaryColor"
        android:hint="College"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/stud_branch"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/secondaryColor"
        android:hint="Branch"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/stud_phone"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/secondaryColor"
        android:hint="Phone"
        android:padding="20dp"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/stud_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:hint="Email"
        android:background="@color/secondaryColor"
        android:padding="20dp"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/stud_info_submit"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="140dp"
        android:backgroundTint="@color/secondaryColor"/>

</LinearLayout>