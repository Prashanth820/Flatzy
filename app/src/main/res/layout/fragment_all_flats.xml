<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.allflats.AllFlatsFragment">

    <com.arpan.collegebroker.view.RecyclerViewEmptySupport
        android:id="@+id/allFlatsRV"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/allFlatsPlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:src="@drawable/ic_cloud_off_black_512"
            android:layout_width="128dp"
            android:layout_height="128dp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Looks like there are no flats"
            android:textColor="#D5D5D5"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="or either you aren't connected."
            android:textSize="18sp"
            android:textColor="#D5D5D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>