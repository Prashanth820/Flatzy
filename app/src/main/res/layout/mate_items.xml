<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/mate_item_card"
    android:background="@color/white"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mate_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/student_name"

            android:textSize="12dp"


            android:layout_marginLeft="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_name"
            android:id="@+id/student_college"


            android:textSize="12dp"
            android:layout_marginTop="8dp"

            android:layout_marginLeft="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_college"
            android:id="@+id/student_branch"


            android:textSize="12dp"
            android:layout_marginTop="8dp"

            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/student_phone"
            android:layout_below="@+id/student_branch"

            android:textSize="12dp"

            android:layout_marginTop="8dp"




            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/student_email"
            android:layout_below="@+id/student_phone"


            android:textSize="12dp"
            android:layout_marginTop="8dp"



            android:layout_marginLeft="120dp"/>

        <Button
            android:id="@+id/request_mate"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request"
            android:textAllCaps="false"
            android:layout_marginTop="80dp"
            />


    </RelativeLayout>



</LinearLayout>